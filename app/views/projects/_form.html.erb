<%= form_with(model: project) do |form| %>
  <div class="col-6">
    <% if project.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(project.errors.count, "error") %> proibido criar o projeto:</h2>

        <ul>
          <% project.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
 
    <div class="col-6 fs-4">
      <%= form.label :title, class: 'form-label' %>
      <%= form.text_field :title, class: 'form-control mb-3'  %>
    </div>

    <div class="col-6 fs-4">
      <%= form.label :description, class: 'form-label' %>
      <%= form.text_area :description, class: 'form-control mb-3', maxlength: 200  %>
    </div>

    <div class="col-6 fs-4">
      <%= form.label :date_start, class: 'form-label' %>
      <%= form.date_field :date_start, class: 'form-control mb-3', required: true %>
    </div>

    <div class="col-6 fs-4">
      <%= form.label :date_end, class: 'form-label' %>
      <%= form.date_field :date_end, class: 'form-control mb-3', required: true %>
    </div>

    <div class="text-center col-6">
      <%= form.submit class: 'btn btn-outline-info' %>
    </div>
  </div>
<% end %>
