<p id="notice"><%= notice %></p>

<% if @projects.size == 0 %>
  <div class="p-5 mb-4 bg-light rounded-3 border border-2">
    <div class="container-fluid py-5">
      <h2>
        <div class="fa fa-face-sad-tear text-info"></div>
        Não foi encontrado nenhum projeto
      </h2>
    </div>
  </div>
<% else %>
  <div class="col-6">
    <div class="card">
      <div class="card-header">
        <h1>Projetos</h1>
      </div>

      <div class="card-body">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Título</th>
              <th>Descrição</th>
              <th>Data Inicial</th>
              <th>Data Final</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @projects.each do |project| %>
              <tr>
                <td><%= project.title %></td>
                <td><%= project.description %></td>
                <td><%= project.date_start.strftime('%d/%m/%Y') %></td>
                <td><%= project.date_end.strftime('%d/%m/%Y') %></td>
                <td><%= link_to 'Visualizar', project %></td>
                <td><%= link_to 'Editar', edit_project_path(project) %></td>
                <td><%= link_to 'Apagar', project, method: :delete, data: { confirm: 'Voce tem certeza que deseja apagar o projeto selecionado?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="card-footer">
        <%= link_to 'Novo Projeto', new_project_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
<% end %>



