<%= form_with(model: activity) do |form| %>
  <div class="col-6">
    <% if activity.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(activity.errors.count, "error") %> proibido salvar atividade:</h2>

        <ul>
          <% activity.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="col-6 fs-4">
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control mb-3' %>
    </div>

    <div class="col-6 fs-4">
      <%= form.label :project_id, class: 'form-label' %>
      <%= form.collection_select :project_id, @projects, :id, :title, {}, class: 'form-control mb-3' %>
    </div>

    <div class="col-6 fs-4">
      <%= form.label :date_start, class: 'form-label' %>
      <%= form.date_field :date_start, class: 'form-control mb-3', required: true %>
    </div>

    <div class="col-6 fs-4">
      <%= form.label :date_end, class: 'form-label' %>
      <%= form.date_field :date_end, class: 'form-control mb-3', required: true %>
    </div>

    <div class="text-center col-6">
      <%= form.submit class: 'btn btn-outline-info' %>
    </div>
  </div>
<% end %>
